<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/place_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gradient"
        android:orientation="horizontal"/>

    <com.hjq.bar.TitleBar
        android:id="@+id/userinfo_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/shape_gradient"
        app:titleColor="@null"
        app:leftBackground="@null"
        app:rightBackground="@null"
        app:barStyle="transparent"
        app:leftTitle="返回"
        app:title="个人信息"/>

    <com.hznu.easyrent.MyUI.DividerLinearLayout
        android:id="@+id/activity_user_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/backgroundColor"
        app:dividerColor="@color/colorTrans"
        app:dividerWidth="10dp">
<!--        头像-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white">

            <com.angel.view.SWImageView
                android:id="@+id/head_pic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                app:type="circle"/>
<!--        姓名-->
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="helloworld"/>

        </LinearLayout>
<!--        学号-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:background="@color/white"
            android:gravity="center_vertical">s
            <!--tab-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="学号"/>

            <TextView
                android:id="@+id/user_stuId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/standard"
                android:text="Hello World!"/>

        </RelativeLayout>
        <!--性别-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:background="@color/white"
            android:gravity="center_vertical">
            <!--tab-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="性别"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
<!--                性别图标-->
                <ImageView
                    android:id="@+id/sex_pic"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/male"/>
                <!--性别文字=-->
                <TextView
                    android:id="@+id/user_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:textColor="@color/standard"
                    android:text="Hello World!" />

            </LinearLayout>

        </RelativeLayout>
<!--    学院-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:background="@color/white"
            android:gravity="center_vertical">
            <!--tab-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="学院"/>

            <TextView
                android:id="@+id/user_college"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/standard"
                android:text="Hello World!"/>

        </RelativeLayout>
<!--    专业-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:background="@color/white"
            android:gravity="center_vertical">
            <!--tab-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="专业"/>

            <TextView
                android:id="@+id/user_department"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/standard"
                android:text="Hello World!"/>

        </RelativeLayout>
<!--    班级-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:background="@color/white"
            android:gravity="center_vertical">s
            <!--tab-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="班级"/>

            <TextView
                android:id="@+id/user_class"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/standard"
                android:text="Hello World!"/>

        </RelativeLayout>

    </com.hznu.easyrent.MyUI.DividerLinearLayout>

    <Button
        android:id="@+id/sure_change"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/cutePink"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="确认修改"/>

    <Button
        android:id="@+id/cancel_change"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="取消"/>

</LinearLayout>